#!/bin/bash
# THIS IS A GENERATED FILE, NOT RECOMMENDED TO EDIT.

function log() {
  logger -s -p user.$1 ${@:2}
}

log info "navigator: Using workspace setup file /opt/vn/setup.bash"
source /opt/vn/setup.bash
JOB_FOLDER=/etc/ros/melodic/navigator.d

log_path="/home/vn/.ros/log"
if [[ ! -d $log_path ]]; then
  CREATED_LOGDIR=true
  trap 'CREATED_LOGDIR=false' ERR
    log warn "navigator: The log directory you specified \"$log_path\" does not exist. Attempting to create."
    mkdir -p $log_path 2>/dev/null
    chown vn:vn $log_path 2>/dev/null
    chmod ug+wr $log_path 2>/dev/null
  trap - ERR
  # if log_path could not be created, default to tmp
  if [[ $CREATED_LOGDIR == false ]]; then
    log warn "navigator: The log directory you specified \"$log_path\" cannot be created. Defaulting to \"/tmp\"!"
    log_path="/tmp"
  fi
fi

export ROS_HOSTNAME=$(hostname)

export ROS_MASTER_URI=http://127.0.0.1:11311
export ROS_HOME=${ROS_HOME:=$(echo ~vn)/.ros}
export ROS_LOG_DIR=$log_path

log info "navigator: Launching ROS_HOSTNAME=$ROS_HOSTNAME, ROS_IP=$ROS_IP, ROS_MASTER_URI=$ROS_MASTER_URI, ROS_HOME=$ROS_HOME, ROS_LOG_DIR=$log_path"

# If xacro files are present in job folder, generate and expand an amalgamated urdf.
XACRO_FILENAME=$log_path/navigator.xacro
XACRO_ROBOT_NAME=$(echo "navigator" | cut -d- -f1)
rosrun robot_upstart mkxacro $JOB_FOLDER $XACRO_ROBOT_NAME > $XACRO_FILENAME
if [[ "$?" == "0" ]]; then
  URDF_FILENAME=$log_path/navigator.urdf
  rosrun xacro xacro $XACRO_FILENAME -o $URDF_FILENAME
  if [[ "$?" == "0" ]]; then
    log info "navigator: Generated URDF: $URDF_FILENAME"
  else
    log warn "navigator: URDF macro expansion failure. Robot description will not function."
  fi
  export ROBOT_URDF_FILENAME=$URDF_FILENAME
fi

# Assemble amalgamated launchfile.
LAUNCH_FILENAME=$log_path/navigator.launch
rosrun robot_upstart mklaunch $JOB_FOLDER > $LAUNCH_FILENAME
if [[ "$?" != "0" ]]; then
  log err "navigator: Unable to generate amalgamated launchfile."
  exit 1
fi
log info "navigator: Generated launchfile: $LAUNCH_FILENAME"

# Warn and exit if setuidgid is missing from the system.
which setuidgid > /dev/null
if [ "$?" != "0" ]; then
  log err "navigator: Can't launch as unprivileged user without setuidgid. Please install daemontools package."
  exit 1
fi

#cd $HOME/nodejs_ws/web
# npm run start_dev > $HOME/nodejs_test.log 2>&1
#forever start index.js --watch --name myRobot > $HOME/nodejs_test.log 2>&1

# Punch it.
roslaunch $LAUNCH_FILENAME > $log_path/start.log 2>&1 &
PID=$!

log info "navigator: Started roslaunch as background process, PID $PID, ROS_LOG_DIR=$ROS_LOG_DIR"
echo "$PID" > $log_path/navigator.pid

wait "$PID"
